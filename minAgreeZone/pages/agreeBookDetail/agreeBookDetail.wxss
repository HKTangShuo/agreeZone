/* pages/auctionDetail/auctionDetail.wxss */



.banner image{
  width: 750rpx;
  height: 400rpx;
}

.tips{
  padding:20rpx 40rpx;
  border-bottom: 18rpx solid #f5f5f5;
}

.tips .top{
  display: flex;
  flex-direction: row;
  justify-content:space-between;
}

.tips .top .title{
  font-size: 42rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.tips .top .status{
  padding: 0 12rpx;
  border-radius: 12rpx;
  color: #fff;
  font-size: 28rpx;
}
.tips .top  .status.auction{
  background-color: #d71e61;
}

.tips .top  .status.preview{
  background-color: #00c8b6;
}

.tips .top  .status.stop{
  background-color: #ccc;
}

.tips .top .time{
  margin-left: 10rpx;
  font-size: 28rpx;
}


.tips .top .share{
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 24rpx;
}

.tips .top .share image{
  height: 40rpx;
  width: 40rpx;
  margin-bottom: 5rpx;
}

.tips .others{
  display: flex;
  flex-direction: row;
  justify-content:space-between;

  margin-top: 10rpx;
  color: #8c8c8c;
  font-size: 28rpx;
}


.content{
margin: 20rpx;
}




.footer{
  background-color: #f5f5f5;
  height: 60rpx;
  padding-bottom: 18rpx;
  font-size: 28rpx;
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #cccccc;
}